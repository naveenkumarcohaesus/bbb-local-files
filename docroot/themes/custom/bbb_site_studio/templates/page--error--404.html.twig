{#
/**
 * @file
 * theme implementation for the 404 page.
 *
 * Variables:
 * - headline: A headline for the page.
 * - message: Message to display for the user.
 * - node_type: The content type for the current node, if the page is a node.
 * - button_home: Text for home button.
 * - button_search: Text for search button.
 *
 */
#}
{{ attach_library('acquia_cms_common/pnf_style') }}
<div class="pnf__wrapper">
	<div class="pnf__body">
    <h2>{{headline}}</h2>
		<p>{{ message }}</p>

    {% if module_name == 'bpc' %}
      <a href="/" class="pnf__btn coh-style-link-button-color" data-card-folds="off">{{ button_home }}</a>
    {% else %}
      <a href="/" class="pnf__btn coh-style-link-button-color" data-card-folds="on">{{ button_home }}</a>
    {% endif %}

		{% if button_search %}
			<div>
				<a href="/search" class="pnf__btn coh-style-link-button-color">{{ button_search }}</a>
			</div>
		{% endif %}
	</div>
</div>
